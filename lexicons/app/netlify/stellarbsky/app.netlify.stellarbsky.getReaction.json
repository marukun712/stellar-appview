{
  "lexicon": 1,
  "id": "app.netlify.stellarbsky.getReaction",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get reaction records which reference a subject (by AT-URI and CID).",
      "parameters": {
        "type": "params",
        "required": ["uri"],
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "AT-URI of the subject (eg, a post record)."
          },
          "cid": {
            "type": "string",
            "format": "cid",
            "description": "CID of the subject record (aka, specific version of record), to filter reactions."
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri", "reactions"],
          "properties": {
            "uri": { "type": "string", "format": "at-uri" },
            "cid": { "type": "string", "format": "cid" },
            "cursor": { "type": "string" },
            "reactions": {
              "type": "array",
              "items": { "type": "ref", "ref": "#reaction" }
            }
          }
        }
      }
    },
    "reaction": {
      "type": "object",
      "required": ["subject", "createdAt", "emoji", "actor"],
      "properties": {
        "subject": { "type": "ref", "ref": "com.atproto.repo.strongRef" },
        "createdAt": { "type": "string", "format": "datetime" },
        "emoji": { "type": "string" },
        "actor": { "type": "ref", "ref": "app.bsky.actor.defs#profileView" }
      }
    }
  }
}
